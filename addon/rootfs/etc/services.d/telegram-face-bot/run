#!/usr/bin/with-contenv bash
set -euo pipefail

# Read options from Home Assistant
TOKEN=$(jq -r '.TELEGRAM_BOT_API_TOKEN // empty' /data/options.json)

if [ -z "${TOKEN:-}" ]; then
  echo "[ERROR] 'TELEGRAM_BOT_API_TOKEN' is not set in add-on options." >&2
  exit 1
fi

export TELEGRAM_BOT_API_TOKEN="$TOKEN"

cd /opt/telegram-face-bot
exec python3 /opt/telegram-face-bot/main.py


